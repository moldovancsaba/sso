{
  "name": "@doneisbetter/sso-client",
  "version": "1.0.0",
  "description": "DoneIsBetter SSO Client for seamless authentication integration",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --sourcemap",
    "clean": "rm -rf dist",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moldovancsaba/sso.git"
  },
  "keywords": [
    "sso",
    "authentication",
    "session",
    "doneisbetter"
  ],
  "author": "DoneIsBetter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moldovancsaba/sso/issues"
  },
  "homepage": "https://sso.doneisbetter.com",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^8.47.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "overrides": {
    "glob": "^10.0.0",
    "inflight": "^2.0.0"
  }
}
