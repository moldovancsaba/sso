  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moldovancsaba/sso.git",
    "directory": "client"
  },
  "bugs": {
    "url": "https://github.com/moldovancsaba/sso/issues"
  },
  "homepage": "https://sso.doneisbetter.com",
  "devDependencies": {
    "@types/node": "^20.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
