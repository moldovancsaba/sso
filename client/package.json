    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "sso",
    "authentication",
    "session",
    "doneisbetter",
    "cookie",
    "subdomain"
  ],
