{
  "name": "@doneisbetter/sso-client",
  "version": "5.1.0",
  "description": "DoneIsBetter SSO Client for cookie-based authentication integration (*.doneisbetter.com subdomains)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
