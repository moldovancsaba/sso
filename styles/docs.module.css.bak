/* Documentation Page Styles - Uses Centralized Design System */

.container {
  max-width: var(--max-w-6xl);
  margin: 0 auto;
  padding: var(--space-12) var(--space-8);
  font-family: var(--font-sans);
  font-feature-settings: 'cv11', 'ss01', 'ss02';
  font-optical-sizing: auto;
  color: var(--text-primary);
  line-height: var(--leading-relaxed);
}

.header {
  text-align: center;
  margin-bottom: var(--space-16);
  padding-bottom: var(--space-10);
  border-bottom: 1px solid var(--border-subtle);
  position: relative;
}

.header h1 {
  font-size: clamp(var(--text-4xl), 5vw, var(--text-5xl));
  font-weight: var(--font-bold);
  letter-spacing: var(--tracking-tighter);
  color: var(--text-primary);
  margin-bottom: var(--space-3);
  background: linear-gradient(135deg, var(--color-neutral-950) 0%, var(--color-neutral-700) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.version {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  color: var(--text-tertiary);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  padding: var(--space-2) var(--space-4);
  background: var(--bg-surface-secondary);
  border-radius: var(--radius-full);
  border: 1px solid var(--border-subtle);
  transition: all var(--transition-base);
}

.version:hover {
  background: var(--bg-surface-hover);
  border-color: var(--border-default);
}

.main {
  margin-bottom: var(--space-16);
}

.section {
  margin-bottom: var(--space-16);
  padding-bottom: var(--space-12);
  border-bottom: 1px solid var(--border-subtle);
  scroll-margin-top: var(--space-20);
}

.section h2 {
  font-size: clamp(var(--text-3xl), 3vw, var(--text-4xl));
  font-weight: var(--font-bold);
  letter-spacing: var(--tracking-tight);
  color: var(--text-primary);
  margin-bottom: var(--space-5);
  margin-top: var(--space-8);
  position: relative;
  padding-left: var(--space-4);
}

.section h2::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0.35em;
  width: 4px;
  height: 1.2em;
  background: var(--brand-gradient);
  border-radius: var(--radius-full);
}

.section h3 {
  font-size: clamp(var(--text-xl), 2.5vw, var(--text-2xl));
  font-weight: var(--font-semibold);
  letter-spacing: var(--tracking-tight);
  color: var(--text-primary);
  margin: var(--space-8) 0 var(--space-4);
}

.section h4 {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--text-secondary);
  margin: var(--space-6) 0 var(--space-3);
}

.section p {
  margin: var(--space-4) 0;
  color: var(--text-secondary);
  font-size: var(--text-base);
  line-height: var(--leading-relaxed);
}

.codeBlock {
  background: var(--bg-code);
  color: var(--text-code);
  padding: var(--space-6);
  border-radius: var(--radius-lg);
  overflow-x: auto;
  margin: var(--space-6) 0;
  border: 1px solid var(--border-subtle);
  box-shadow: var(--shadow-md);
  position: relative;
}

.codeBlock::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(148, 163, 184, 0.3) 50%, 
    transparent 100%);
}

.codeBlock pre {
  margin: 0;
  white-space: pre-wrap;
  font-family: var(--font-mono);
  font-size: var(--text-sm);
  line-height: var(--leading-relaxed);
  font-feature-settings: 'liga' 1, 'calt' 1;
}

.codeBlock code {
  font-family: inherit;
}

.steps {
  list-style-type: none;
  padding: 0;
  counter-reset: step-counter;
}

.steps li {
  counter-increment: step-counter;
  margin-bottom: var(--space-8);
  padding-left: var(--space-10);
  position: relative;
}

.steps li::before {
  content: counter(step-counter);
  position: absolute;
  left: 0;
  top: 0;
  width: 1.8rem;
  height: 1.8rem;
  background: var(--brand-primary);
  color: var(--text-inverse);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--text-sm);
  font-weight: var(--font-bold);
}

.tabs {
  border: 1px solid var(--border-default);
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.tab {
  padding: var(--space-6);
  background: var(--bg-surface-secondary);
  border-bottom: 1px solid var(--border-default);
}

.tab:last-child {
  border-bottom: none;
}

.tab h3 {
  margin-top: 0;
  color: var(--brand-primary);
}

.footer {
  text-align: center;
  padding: var(--space-8) 0;
  color: var(--text-tertiary);
  font-size: var(--text-sm);
}

/* Links */
.section a {
  color: var(--text-link);
  text-decoration: none;
  position: relative;
  font-weight: var(--font-medium);
  transition: color var(--transition-base);
}

.section a::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -2px;
  width: 100%;
  height: 1px;
  background: currentColor;
  opacity: 0;
  transform: scaleX(0);
  transform-origin: right;
  transition: all var(--transition-slow);
}

.section a:hover {
  color: var(--text-link-hover);
}

.section a:hover::after {
  opacity: 1;
  transform: scaleX(1);
  transform-origin: left;
}

/* Alert boxes */
.alert {
  padding: var(--space-4) var(--space-5);
  border-radius: var(--radius-lg);
  margin: var(--space-6) 0;
  border: 1px solid var(--color-blue-200);
  background: var(--color-blue-50);
  backdrop-filter: blur(10px);
}

.alert strong {
  color: var(--brand-primary-active);
  font-weight: var(--font-semibold);
}

/* Inline code */
code:not(.codeBlock code) {
  background: var(--bg-surface-secondary);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-sm);
  font-size: 0.875em;
  color: var(--text-primary);
  font-weight: var(--font-medium);
  font-family: var(--font-mono);
  border: 1px solid var(--border-subtle);
}

/* Tables */
.table {
  overflow-x: auto;
  margin: var(--space-8) 0;
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-subtle);
  box-shadow: var(--shadow-sm);
}

.table table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  font-size: var(--text-base);
}

.table th,
.table td {
  padding: var(--space-4) var(--space-5);
  text-align: left;
  border-bottom: 1px solid var(--border-subtle);
}

.table th {
  background: linear-gradient(180deg, var(--color-neutral-50) 0%, var(--color-neutral-100) 100%);
  font-weight: var(--font-semibold);
  color: var(--text-primary);
  font-size: var(--text-sm);
  text-transform: uppercase;
  letter-spacing: var(--tracking-wide);
  position: sticky;
  top: 0;
  z-index: var(--z-sticky);
}

.table tbody tr {
  transition: all var(--transition-base);
}

.table tbody tr:last-child td {
  border-bottom: none;
}

.table tbody tr:hover {
  background: var(--color-blue-50);
}

.table tbody tr:hover td {
  color: var(--text-primary);
}

/* Lists */
.section ul:not(.steps) {
  padding-left: var(--space-6);
  margin: var(--space-6) 0;
}

.section ul:not(.steps) li {
  margin-bottom: var(--space-3);
  line-height: var(--leading-relaxed);
  color: var(--text-secondary);
  position: relative;
}

.section ul:not(.steps) li::marker {
  color: var(--brand-primary);
}

.section ol {
  padding-left: var(--space-6);
  margin: var(--space-6) 0;
}

.section ol li {
  margin-bottom: var(--space-3);
  line-height: var(--leading-relaxed);
  color: var(--text-secondary);
}

/* Utility classes for documentation pages */
.subtitle {
  font-size: var(--text-sm);
  color: var(--text-tertiary);
  margin-top: var(--space-2);
}

.warningBox {
  background: var(--color-warning-50);
  border: 1px solid var(--color-warning-600);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  margin-bottom: var(--space-4);
}

.warningBox p {
  margin: 0;
  font-size: var(--text-sm);
  color: var(--color-error-700);
}

.dangerText {
  color: var(--status-error);
  font-size: var(--text-sm);
  margin: var(--space-2) 0;
}

/* Responsive design */
@media (max-width: 768px) {
  .container {
    padding: 1rem;
  }

  .header h1 {
    font-size: 2rem;
  }

  .section h2 {
    font-size: 1.5rem;
  }

  .codeBlock {
    padding: 1rem;
  }

  .steps li {
    padding-left: 2rem;
  }
}
