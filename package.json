{
  "name": "@moldovancsaba/universal-sso",
  "version": "5.24.0",
  "description": "A universal Single Sign-On (SSO) service that can be integrated into any project",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p $PORT",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "validate-config": "node -e \"import('./lib/config.js').then(c => c.validateConfig())\"",
    "test-connection": "node scripts/test-connection.js",
    "setup": "cp .env.example .env && echo 'Please edit .env with your configuration'",
    "vercel-build": "next build",
    "sync:version": "node scripts/sync-version.mjs"
  },
  "keywords": [
    "sso",
    "authentication",
    "single-sign-on",
    "nextjs",
    "mongodb",
    "universal",
    "oauth",
    "session-management"
  ],
  "author": "Moldovan Csaba",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express-rate-limit": "7.5.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^6.0.0",
    "next": "15.4.10",
    "nodemailer": "7.0.9",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "resend": "6.1.2",
    "winston": "3.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.4.2",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moldovancsaba/sso.git"
  },
  "bugs": {
    "url": "https://github.com/moldovancsaba/sso/issues"
  },
  "homepage": "https://github.com/moldovancsaba/sso#readme"
}
